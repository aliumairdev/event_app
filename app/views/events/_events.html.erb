<div class="mt-3">
  <%= link_to 'Add New Event', new_event_path, class: "btn btn-outline-primary" %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% events.each do |event| %>
        <%= render 'event', event: event %>
      <% end %>
    </tbody>
  </table>
</div>
